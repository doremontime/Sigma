<!DOCTYPE html>
<html>
  <head>
    <meta charset="{{site.charset}}" />
    {% if fn('is_front_page') %}
      <title>{{site.name}} - {{site.description}}</title>
    {% else %}
      <title>{{ fn('bloginfo') }} - {{ wp_title }}</title>
    {% endif %}
    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1, minimum-scale=1">
    <link rel="shortcut icon" href="{{ site_favicon }}" type="image/x-icon" />
    <link rel="icon" href="{{ site_favicon }}" type="image/x-icon">
    <link rel="pingback" href="{{site.pingback_url}}" />
    <script src='https://www.google.com/recaptcha/api.js?render=explicit' async defer></script>
    {{ wp_head }}
  </head>
  <body class="{{ body_class }}" data-template="base.twig">
    <div class="page-wrapper">
      {% block header %}
        {% include 'header.twig' %}
      {% endblock %}

      {% block feature %}
        {% include 'feature.twig' %}
      {% endblock %}

      <main role="main">
        {% block content %}
          {{context}}
        {% endblock %}
      </main>

      {% block footer %}
        {% include 'footer.twig' %}
        {{ wp_footer }}
      {% endblock %}

      {% block footer_scripts %}
      {% endblock %}

      <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&#38;key={{ google_api_key }}&#38;libraries=places" type="text/javascript"></script>
    </div>
  </body>
</html>
